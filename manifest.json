{
  "manifest_version": 2,
  "name": "Notes for YouTube",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "test.png",
    // the default_title shows up on every page, not just URLs with "youtube" -- fix
    "default_title": "This is a Youtube video!"
  },
  "permissions" : [
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "content.js"
      ]
    }
  ]
}