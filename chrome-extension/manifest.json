{
  "manifest_version": 2,
  "name": "Notes for YouTube",
  "version": "0.1",
  "page_action": {
    "default_icon": "test.png",
    "default_popup": "./popup/popup.html",
    "default_title": "Notes for YouTube!"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"   
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}